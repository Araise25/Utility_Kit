{
  "manifest_version": 2,
  "name": "Utility Kit",
  "version": "1.0.0",
  "description": "Small offline browser utilities",
  "permissions": [
    "tabs",
    "history",
    "sessions",
    "browsingData",
    "menus",
    "storage",
    "notifications"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Utility Kit",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "commands": {
    "close_and_forget": {
      "description": "Close current tab and forget it",
      "suggested_key": {
        "default": "Alt+Shift+W"
      }
    }
  },
 "browser_specific_settings": {
  "gecko": {
    "id": "utility-kit@example.com",
    "data_collection_permissions": {
      "required": ["none"]
    }
  }
}
}