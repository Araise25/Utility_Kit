{
  "manifest_version": 3,
  "name": "Utility Kit",
  "version": "0.3.0",
  "description": "Small offline browser utilities",
  "permissions": [
    "tabs",
    "history",
    "browsingData",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Utility Kit",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "_execute_action": {
      "description": "Close current tab and forget it",
      "suggested_key": {
        "default": "Alt+Shift+W"
      }
    }
  }
}
